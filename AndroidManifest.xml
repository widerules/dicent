<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.dicent"
      android:versionCode="10" android:versionName="4.0">
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="15"/>
    <application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name=".PlayerListActivity"
			android:label="@string/app_name">
		<intent-filter>
        	<action android:name="android.intent.action.MAIN" />
       		<category android:name="android.intent.category.LAUNCHER" />
		</intent-filter>	
		</activity>
		<activity android:name=".DicentPreferencesActivity"
			android:label="@string/preferencesTitle" />
		<activity android:name=".SelectDiceActivity"
			android:label="@string/selectDiceTitle" />
		<activity android:name=".ResultsActivity"
			android:label="@string/resultsTitle" />
    </application>
</manifest> 