<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="DiceGrid">
		<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:verticalSpacing">6dp</item>
        <item name="android:horizontalSpacing">6dp</item>
        <item name="android:stretchMode">spacingWidthUniform</item>
        <item name="android:gravity">center</item>
	
	</style>
	
    <style name="BottomButtons">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="resultsSeparator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/resultsSeparator</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
    </style>
    
    <style name="resultsImageLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
</resources>